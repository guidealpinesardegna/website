---
import ResponsiveImage from "../../components/ResponsiveImage.astro";
const { activity } = Astro.props;
---

<ul class="flex flex-wrap gap-2">
  {
    activity.fields.gallery.map((photo) => (
      <li>
        <a
          data-fslightbox
          href={`${photo.fields.file.url}?w=1600&fit=thumb&q=60&fm=avif`}
          data-caption={photo.fields.title || ""}
          data-group="gallery"
          data-astro-prefetch
        >
          <ResponsiveImage
            src={`${photo.fields.file.url}?w=400&h=400&fit=thumb&q=60&fm=avif`}
            sizes={{
              "600": `${photo.fields.file.url}?w=160&h=160&fit=thumb&q=60&fm=avif`,
            }}
            alt={activity.fields.title || ""}
            loading="lazy"
            decoding="async"
            width="150"
            height="150"
          />
        </a>
      </li>
    ))
  }
</ul>

<script>
  import fslightbox from "fslightbox";
</script>
