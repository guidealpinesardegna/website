---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FontsImport from "../components/FontsImport.astro";
import HtmlStyles from "../components/HtmlStyles.astro";
import Cookiebanner from "../components/Cookiebanner.astro";
const { lang, info, title, description, url, ogType, ogImage, item } =
  Astro.props;
const isDev = import.meta.env.DEV;
---

<html lang={lang} class="scrollbar-stable scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#ffffff" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="og:title" content={title} />
    <meta name="twitter:title" content={title} />
    <meta name="description" content={description} />
    <meta name="og:description" content={description} />
    <meta name="twitter:description" content={description} />
    <meta name="og:type" content={ogType} />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:image" content={ogImage} />
    <meta name="og:image" content={ogImage} />
    <meta name="og:url" content={url} />
    <slot name="head" />
    <title>{title}</title>

    <FontsImport />
    {isDev && <meta name="robots" content="noindex" />}
    <HtmlStyles />
  </head><body>
    <Cookiebanner lang={lang} />
    <Header lang={lang} item={item} info={info} />
    <div><slot /></div>
    <Footer lang={lang} info={info} />
  </body>
</html>
