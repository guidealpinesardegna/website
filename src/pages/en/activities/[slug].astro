---
import fs from "fs-extra";
import ActivityPage from "../../../features/activity/ActivityPage.astro";
import Layout from "../../../layouts/Layout.astro";

export function getStaticPaths() {
  const activities = fs.readJsonSync("_cache/activities.json");
  return activities.map((activity) => ({
    params: { slug: activity.fields.slug_en },
    props: {
      activity,
    },
  }));
}

const { activity } = Astro.props;
---

<ActivityPage lang="en" activity={activity} />
